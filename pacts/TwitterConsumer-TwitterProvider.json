{
  "provider": {
    "name": "TwitterProvider"
  },
  "consumer": {
    "name": "TwitterConsumer"
  },
  "interactions": [
    {
      "description": "request for current logged in user",
      "request": {
        "method": "GET",
        "path": "/api/auth/me",
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset\u003dUTF-8"
        },
        "body": {
          "__v": 100,
          "name": "string",
          "_id": "string",
          "username": "string"
        },
        "matchingRules": {
          "body": {
            "$._id": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.name": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.username": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.__v": {
              "matchers": [
                {
                  "match": "integer"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset\u003d[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "$._id": {
              "type": "RandomString",
              "size": 20
            },
            "$.name": {
              "type": "RandomString",
              "size": 20
            },
            "$.username": {
              "type": "RandomString",
              "size": 20
            },
            "$.__v": {
              "type": "RandomInt",
              "min": 0,
              "max": 2147483647
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "A user is already logged in"
        }
      ]
    },
    {
      "description": "POST request",
      "request": {
        "method": "POST",
        "path": "/api/auth/login",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "sayantan",
          "password": "secretpwd"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset\u003dUTF-8"
        },
        "body": {
          "auth": true,
          "user_id": "string",
          "token": "string"
        },
        "matchingRules": {
          "body": {
            "$.auth": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.token": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.user_id": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset\u003d[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        },
        "generators": {
          "body": {
            "$.token": {
              "type": "RandomString",
              "size": 20
            },
            "$.user_id": {
              "type": "RandomString",
              "size": 20
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "POST request to login was made"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.3"
    }
  }
}